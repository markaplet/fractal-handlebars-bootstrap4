<button type="button" class="btn{{#if modalButtonModifier}} {{modalButtonModifier}}{{/if}}" data-toggle="modal" data-target="#{{modalUniqueID}}">
    {{modalButtonLabel}}
</button>

<div class="modal{{#if modalModifier}} {{modalModifier}}{{/if}}" id="{{modalUniqueID}}" tabindex="-1" aria-labelledby="{{modalTitleUniqueID}}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <{{modalHeadingLevel}} class="modal-title" id="{{modalTitleUniqueID}}">{{modalTitle}}</{{modalHeadingLevel}}>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{{modalContent}}}
            </div>
            <div class="modal-footer">
                {{{modalFooterContent}}}
            </div>
        </div>
    </div>
</div>
